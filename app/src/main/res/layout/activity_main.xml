<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_black"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_menu" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/solution"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:textColor="@color/ios_white"
        android:layout_above="@id/result"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:id="@+id/result"
        android:textAlignment="textEnd"
        android:textColor="@color/ios_white"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:textSize="18dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_black"
                android:backgroundTint="@color/ios_light_gray"
                android:id="@+id/button_ac" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="Â±"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_black"
                android:backgroundTint="@color/ios_light_gray"
                android:id="@+id/button_swap" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="%"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_black"
                android:backgroundTint="@color/ios_light_gray"
                android:id="@+id/button_percent" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_orange"
                android:id="@+id/button_divide" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_7" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_8" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_9" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="X"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_orange"
                android:id="@+id/button_multiply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_4" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_5" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_6" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_orange"
                android:id="@+id/button_minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_1" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_2" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_3" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_orange"
                android:id="@+id/button_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="170dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_0" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_dark_gray"
                android:id="@+id/button_coma" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="@color/ios_white"
                android:backgroundTint="@color/ios_orange"
                android:id="@+id/button_equal" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>